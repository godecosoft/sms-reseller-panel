# .env - TurkeySMS Ayarları GÜNCELLEME - GÜVENLİK İYİLEŞTİRMELERİ

# Veritabanı Ayarları
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sms_reseller_panel
DB_USER=root
DB_PASSWORD=

# JWT Güvenlik - GÜÇLENDİRİLMİŞ
JWT_SECRET=your-super-secure-256-bit-jwt-secret-key-change-this-in-production-please-make-it-very-long-and-random
JWT_EXPIRES_IN=24h

# TurkeySMS API Ayarları - SİZİN APİNİZ
TURKEYSMS_API_KEY=1ab9810ca3fb3f871dc130176019ee14
TURKEYSMS_BASE_URL=https://turkeysms.com.tr
DEFAULT_SMS_TITLE=08509449683

# SMS Ayarları
SMS_COST_PER_MESSAGE=0.01
SMS_LANG=0

# Sunucu Ayarları
PORT=5000
NODE_ENV=development

# Admin Hesap (İlk kurulumda oluşturulacak)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@smspanel.com

# Güvenlik Ayarları (YENİ)
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10

# Loglama (YENİ)
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# Production Ayarları (YENİ)
# NODE_ENV=production
# DB_HOST=your-production-db-host
# DB_PASSWORD=your-production-db-password
# JWT_SECRET=your-production-jwt-secret-256-bit-minimum
